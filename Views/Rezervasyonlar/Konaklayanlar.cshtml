                                                <a asp-action="OdemeAl" asp-route-id="@item.RezervasyonID" class="btn btn-sm btn-outline-secondary" title="Folyoyu GÃ¶r">
                                                    <i class="fa-solid fa-file-invoice"></i>
                                                </a>
                                            </div>
