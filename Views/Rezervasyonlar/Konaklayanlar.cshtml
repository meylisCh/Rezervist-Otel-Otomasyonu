                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<script>
function tabloFiltrele() {
    var input, filter, table, tr, td, i;
    input = document.getElementById("aramaKutusu");
    filter = input.value.toUpperCase();
    table = document.querySelector("table");
    tr = table.getElementsByTagName("tr");

    for (i = 1; i < tr.length; i++) {
        var tdOda = tr[i].getElementsByTagName("td")[0];
        var tdIsim = tr[i].getElementsByTagName("td")[1];
        
        if (tdOda || tdIsim) {
            var textOda = tdOda.textContent || tdOda.innerText;
            var textIsim = tdIsim.textContent || tdIsim.innerText;
            
            if (textOda.toUpperCase().indexOf(filter) > -1 || textIsim.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
            } else {
                tr[i].style.display = "none";
            }
        }       
    }
}
</script>