@model IEnumerable<Rezervist.Models.Oda>
@{ ViewData["Title"] = "Oda Durumları"; }

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fa-solid fa-border-all me-2"></i>Oda Haritası</h2>
        <a asp-action="Create" class="btn btn-dark"><i class="fa-solid fa-plus me-1"></i>Yeni Oda Ekle</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            // Renk Mantığı: Önce KİRLİ mi diye bak, sonra DOLU mu?
            string kartRengi = "bg-success"; // Varsayılan Yeşil (Boş ve Temiz)
            string ikon = "fa-door-open";
            string durumMetni = "MÜSAİT";

            if (!item.TemizMi)
            {
                kartRengi = "bg-warning text-dark"; // Sarı (Kirli)
                ikon = "fa-broom";
                durumMetni = "TEMİZLİK BEKLİYOR";
            }
            else if (item.DoluMu)
            {
                kartRengi = "bg-danger"; // Kırmızı (Dolu)
                ikon = "fa-bed";
                durumMetni = "DOLU";
            }

            <div class="col-md-3 col-6">
                <div class="card text-white @kartRengi shadow h-100 py-3 text-center position-relative" style="transition: transform 0.2s;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h1 class="display-4 fw-bold">@item.OdaNumarasi</h1>
                        <div class="fs-5 mb-2">@item.OdaTipi</div>
                        
                        <div class="border-top border-white pt-2 mt-2 opacity-75">
                            <i class="fa-solid @ikon me-1"></i> @durumMetni
                        </div>
                    </div>
                    <a asp-action="Details" asp-route-id="@item.OdaID" class="stretched-link"></a>
                </div>
            </div>
        }
    </div>
    
    <div class="mt-4 d-flex gap-3 justify-content-center">
        <span class="badge bg-success p-2">Boş / Temiz</span>
        <span class="badge bg-danger p-2">Dolu</span>
        <span class="badge bg-warning text-dark p-2">Temizlik Bekliyor</span>
    </div>
</div>